#!/bin/bash

git diff-index --quiet HEAD
CLEAN=$?
if [[ ! ${CLEAN} == 0 ]]; then
    echo "There are uncommitted modifications - not making a package!"
    exit 1
fi

DESCRIBE=$(git describe)

cabal sandbox init

# NOTE: make sure the aemo-archiver is available at the path below!
cabal sandbox add-source ../aemo-archiver

cabal clean
cabal install -j --only-dependencies
cabal build

mkdir -p target
tar czf target/apvi-webservice-${DESCRIBE}.tar.gz \
  dist/build/apvi-webservice/apvi-webservice \
  .cabal-sandbox/share/x86_64-linux-ghc-7.8.4/Chart-diagrams-1.4/fonts
